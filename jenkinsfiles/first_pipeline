#!groovy
// Check properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { 
        label master
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("First step") {
            steps {
                sh 'ssh root@debian \'mkdir /home/eduard/example\''
            }
        }
        stage("Second step") {
            steps {
                sh 'ssh root@debian \'touch /home/eduard/example/Dockerfile\''
            }
        }
    }
}

